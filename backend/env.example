# Database Configuration
DATABASE_URL=sqlite:///./wingstop_inventory.db
# For PostgreSQL: postgresql://wingstop:wingstop123@localhost:5432/wingstop_inventory

# Security Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
API_V1_STR=/api/v1
PROJECT_NAME=Wingstop Inventory API

# CORS Configuration
ALLOWED_HOSTS=["http://localhost:3000", "http://localhost:5173", "http://127.0.0.1:3000"]
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:5173", "http://127.0.0.1:3000"]

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@wingstop.com

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR=./uploads

# Redis Configuration (for caching and background tasks)
REDIS_URL=redis://localhost:6379

# External API Configuration
WINGSTOP_API_URL=https://api.wingstop.com
WINGSTOP_API_KEY=your-api-key

# Monitoring and Logging
SENTRY_DSN=your-sentry-dsn
LOG_FILE=./logs/app.log 